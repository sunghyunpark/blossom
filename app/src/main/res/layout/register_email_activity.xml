<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_btn_img"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 등록"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="18dp"/>
    </RelativeLayout>
    <!--구분선-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:background="#ffe0e0e0"></LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:background="@color/backgroundGray">
        <EditText
            android:id="@+id/email_edit_box"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:textColorHint="#ffd9d7d3"
            android:layout_marginTop="15dp"
            android:hint="@string/register_email_email_edit_box_txt"
            android:background="#ffffff"/>
        <EditText
            android:id="@+id/pw_edit_box"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColorHint="#ffd9d7d3"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:hint="@string/register_email_pw_edit_box_txt"
            android:inputType="textPassword"
            android:background="#ffffff"
            android:layout_below="@+id/email_edit_box"/>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#ffd9d7d3"
            android:layout_below="@+id/pw_edit_box"
            android:text="등록하기"
            android:textColor="#ffffff"/>

    </RelativeLayout>
</LinearLayout>
