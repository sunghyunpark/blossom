<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|snap"
            app:contentScrim="?attr/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/upload_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/my_page_background_50"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"/>

                <TextView
                    android:id="@+id/background_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="20dp"
                    android:text="@string/tab5_background_title_txt"
                    android:textColor="@color/colorWhite"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/background_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/tab5_background_btn_shape">
                        <TextView
                            android:id="@+id/seed_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#dbdbdb"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:id="@+id/seed_img"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="6dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/seed_txt"
                            android:src="@mipmap/seed_img"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/tab5_background_btn_shape">
                        <TextView
                            android:id="@+id/my_story_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#dbdbdb"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:id="@+id/my_story_img"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="6dp"
                            android:layout_toLeftOf="@+id/my_story_txt"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_story_img"/>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" >
                <RelativeLayout
                    android:id="@+id/app_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLOSSOM"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <ImageView
                        android:id="@+id/setting_btn"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/setting_btn_img"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffe0e0e0"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff">
                    <Button
                        android:id="@+id/my_story_btn"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:text="@string/tab5_viewpager_menu_title_1"
                        android:textSize="15dp"
                        android:textColor="@color/colorSky"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:id="@+id/story_underbar"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/my_story_btn"
                        android:background="@color/colorSky"></LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff">
                    <Button
                        android:id="@+id/my_comment_btn"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGray"
                        android:text="@string/tab5_viewpager_menu_title_2"/>
                    <LinearLayout
                        android:id="@+id/comment_underbar"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/my_comment_btn"
                        android:background="@null"></LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff">
                    <Button
                        android:id="@+id/my_favorite_btn"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGray"
                        android:text="@string/tab5_viewpager_menu_title_3"/>
                    <LinearLayout
                        android:id="@+id/favorite_underbar"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/my_favorite_btn"
                        android:background="@null"></LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>