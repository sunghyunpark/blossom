<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <!--구분선-->
        <LinearLayout
            android:id="@+id/divider_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/content"
            android:layout_marginTop="40dp"
            android:background="@color/colorWhite"></LinearLayout>

        <TextView
            android:id="@+id/comment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/divider_layout"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp" />
        <ImageView
            android:id="@+id/comment_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/divider_layout"
            android:layout_toLeftOf="@+id/comment_txt"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/comment_btn"/>

        <TextView
            android:id="@+id/like_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/comment_btn"
            android:layout_below="@+id/divider_layout"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/like_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/divider_layout"
            android:layout_toLeftOf="@+id/like_txt"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>
</RelativeLayout>