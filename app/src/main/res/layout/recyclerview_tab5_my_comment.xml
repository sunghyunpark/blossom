<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab5_my_comment_shape"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:id="@+id/my_comment_layout">

    <RelativeLayout
        android:id="@+id/article_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/comment_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/comment_img_sky"/>

        <TextView
            android:id="@+id/article_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/comment_img"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textColor="@color/colorTextGray"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/my_comment_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/article_txt_layout"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/my_comment_etc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_comment_txt"
        android:layout_marginTop="5dp"
        android:textSize="13dp"
        android:paddingLeft="20dp"
        android:textColor="@color/colorTextGray"/>


</RelativeLayout>